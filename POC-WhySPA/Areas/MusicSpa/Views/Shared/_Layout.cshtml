<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/ngtable")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/angular-loading-bar")
    @Styles.Render("~/Content/app")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    @Scripts.Render("~/bundles/oldIEBrowsersSupport")
    <![endif]-->
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/ngtable")
    @Scripts.Render("~/bundles/angular-loading-bar")
    @Scripts.Render("~/bundles/app")
    <script>
        musicApp.rootUrl = "@Url.Content("~/")";
    </script>
    @RenderSection("HeadContent", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">Why Mini-SPA?</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewBag.ActiveModule == "Music" ? "active" : "")"><a href="@Url.Action("Index", "Albums", new { area = "MusicSpa" })">Music</a></li>
                    <li class="@(ViewBag.ActiveModule == "Movies" ? "active" : "")"><a href="@Url.Action("Index", "MovieDvds", new { area = "MusicSpa" })">Movies</a></li>
                    <li class="@(ViewBag.ActiveModule == "AngularUIBootstrap" ? "active" : "")"><a href="@Url.Action("Index", "AngularUIBootstrapExamples", new { area = "MusicSpa" })">Angular UI Bootstrap</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
